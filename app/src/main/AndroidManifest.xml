<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="utnfrsf.dondecurso">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ReservasActivity"
            android:label="@string/title_activity_reservas"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="utnfrsf.dondecurso.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.SetupActivity"
            android:theme="@style/AppTheme.NoActionBar" />
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="utnfrsf.dondecurso.activity.MainActivity" />
        <activity
            android:name=".activity.FavoritoActivity"
            android:label="@string/title_activity_favorito"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>